{
    "name": "phps-cans/psr7-middleware-graphql",
    "description": "This package contains a PSR-15 middleware to handle GraphQL requests",
    "keywords": ["psr15", "psr7", "middlewares", "middleware", "graphql"],
    "homepage": "https://github.com/phps-cans/psr7-middleware-graphql",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Benoit Ngo",
            "email": "ngobenoit@gmail.com"
        },
        {
            "name": "David Negrier",
            "email": "d.negrier@thecodingmachine.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "psr/http-message": "^1",
        "psr/http-server-handler": "^1",
        "psr/http-server-middleware": "^1",
        "psr/http-factory": "^1",
        "webonyx/graphql-php": "^0.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "satooshi/php-coveralls": "^1.0",
        "phpstan/phpstan": "^0.10.5",
        "doctrine/coding-standard": "^5",
        "zendframework/zend-diactoros": "^2"
    },
    "scripts": {
        "phpstan": "phpstan analyse src -c phpstan.neon --level=7 --no-progress -vvv",
        "check": "phpcs --standard=Doctrine src/ tests/",
        "fix": "phpcbf --standard=Doctrine src/ tests/"
    },
    "autoload": {
        "psr-4": {
            "PsCs\\Middleware\\Graphql\\": "src/"
        }
    }
}
